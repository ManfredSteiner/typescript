  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/src/main.ts",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "outFiles": [ "${workspaceRoot}/dist/*.js" ],
      //"trace": "all",
      "sourceMaps": true,
      "preLaunchTask": "build"
    }
  ]
}
